
{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation for existing donor{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Name:</label><input id="name-input" type="text" name="name"><br>
    <label for="donation-input">Donation:</label><input id="donation-input" type="text" name="donation"><br>
    <input type="submit" value="SUBMIT">
</form>
{% endblock content %}
